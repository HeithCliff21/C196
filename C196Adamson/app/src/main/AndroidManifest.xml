            android:parentActivityName=".MentorDetailsActivity" />
        <activity
            android:name=".EditAssessmentActivity"
            android:label="Edit Assessment"
            android:parentActivityName=".AssessmentDetailsActivity" />
        <activity
            android:name=".EditCourseActivity"
