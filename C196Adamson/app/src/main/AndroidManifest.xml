            android:name=".CourseDetailsActivity"
            android:label="Course Details"
            android:parentActivityName=".TermDetailsActivity" />
        <activity
            android:name=".AddCourseActivity"
            android:label="Add Course"
            android:parentActivityName=".TermDetailsActivity"/>
